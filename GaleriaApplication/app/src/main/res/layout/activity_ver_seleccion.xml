<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#8da6ce"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VerSeleccionActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="250sp"
        android:layout_margin="15sp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#C8D6B9"
        app:cardCornerRadius="15sp"
        android:layout_height="250sp">

        <ImageView
            android:id="@+id/imv_ver_Seleccion"
            android:layout_gravity="center"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:src="@color/black"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_nombre_ver_saleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Pintura"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_precio_ver_seleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Precio"
        android:layout_margin="10sp"
        android:layout_gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Ingrese sus datos para la compra"
        android:layout_margin="5sp"
        android:layout_gravity="center"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColor="@color/black"
        android:hint="Ingrese su nombre"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/et_apellido"
        android:layout_width="250sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Ingrese su apellido"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/et_nit"
        android:layout_width="250sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="Ingrese su NIT"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_comprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar"
        android:backgroundTint="@android:color/holo_green_dark"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="wrap_content"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cancelar"/>


</LinearLayout>