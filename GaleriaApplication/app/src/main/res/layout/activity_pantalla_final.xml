<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c5c6c8"
    android:orientation="vertical"
    tools:context=".PantallaFinalActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="300sp"
        android:layout_margin="20sp"
        app:cardCornerRadius="15sp"
        android:layout_gravity="center"
        android:layout_height="600sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="100sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:text="Gracias por su compra"/>

            <TextView
                android:id="@+id/tv_factura_nombrep"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_margin="40sp"
                android:text="Nombre Pintura"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_nombre_fac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="Nombre Ingresado"/>

            <TextView
                android:id="@+id/tv_fac_ape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_margin="5sp"
                android:text="Apellido ingresado"/>

            <TextView
                android:id="@+id/tv_fac_nit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIT ingresado"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:layout_gravity="center_horizontal"
                android:text="Total a Pagar:"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tv_fac_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagado"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_margin="5sp"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_finalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Finalizar y Regresar"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>