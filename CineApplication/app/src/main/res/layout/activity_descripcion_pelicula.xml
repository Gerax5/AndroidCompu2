<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#233342"
    tools:context=".DescripcionPeliculaActivity">
    
    <ImageView
        android:id="@+id/imv_descripcionCine"
        android:layout_width="200sp"
        android:layout_height="300sp"
        android:src="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/tv_nombre_pelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_gravity="center_horizontal"
        android:text="Nombre Pelicula"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tbl_descripcion_pelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B35340"
        app:tabSelectedTextColor="#FFFFFF"
        app:tabIndicatorColor="#000000"
        android:layout_marginTop="20sp"/>

    <FrameLayout
        android:id="@+id/frml_descripcion_pelicula"
        android:layout_width="match_parent"
        android:layout_height="200sp"/>

    <Button
        android:id="@+id/btn_comprar_entradas"
        android:layout_width="wrap_content"
        android:layout_margin="20sp"
        android:backgroundTint="#2196"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Comprar Boletos"/>

</LinearLayout>