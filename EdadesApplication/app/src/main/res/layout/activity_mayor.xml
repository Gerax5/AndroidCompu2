<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MayorActivity">

    <ImageView
        android:layout_width="200sp"
        android:layout_gravity="center_horizontal"
        android:layout_height="200sp"
        android:layout_marginTop="60sp"
        android:src="@drawable/ic_coche"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resuelve el problema"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_number_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:text="5"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_number_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_marginHorizontal="20sp"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_resultado"
            android:layout_marginHorizontal="20sp"
            android:layout_width="230sp"
            android:layout_height="wrap_content"
            android:hint="Ingrese el resultado"
            android:inputType="number"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp">

        <Button
            android:id="@+id/btn_validar"
            android:layout_width="120sp"
            android:text="Validar"
            android:layout_marginTop="20sp"
            android:layout_marginHorizontal="50sp"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_salir"
            android:layout_width="120sp"
            android:layout_marginTop="20sp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Salir"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>