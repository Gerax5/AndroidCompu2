<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@android:color/darker_gray"
    app:cardCornerRadius="15sp"
    android:layout_margin="10sp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_vehiculo"
            android:layout_width="100sp"
            android:layout_height="100sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vehiculo_placa"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="Placa"/>

            <TextView
                android:id="@+id/tv_vehiculo_nombre_propetario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nombre del propetario"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_vehiculo_marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Marca"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Color"
                android:textColor="@color/black"
                android:id="@+id/tv_vehiculo_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/tv_vehiculo_modelo"
                tools:text="Modelo"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>