<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_height="200sp"
        android:src="@drawable/ic_list_menu"/>

    <TextView
        android:layout_marginTop="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Principal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginTop="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ejercicio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio 1"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:textSize="15sp"
            android:backgroundTint="@android:color/holo_purple"/>

        <Button
            android:id="@+id/btn_ejercicio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio 2"
            android:textSize="15sp"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_ejercicio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio 3"
            android:layout_gravity="center"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:textSize="15sp"
            android:backgroundTint="@android:color/holo_purple"/>

        <Button
            android:id="@+id/btn_ejercicio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio 4"
            android:textSize="15sp"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_gravity="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_ejercicio5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio 5"
        android:backgroundTint="@android:color/holo_purple"
        android:layout_marginTop="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10sp"/>

</LinearLayout>