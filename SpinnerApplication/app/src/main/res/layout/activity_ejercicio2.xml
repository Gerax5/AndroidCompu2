<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Ejercicio2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio 2"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40sp"/>

    <EditText
        android:id="@+id/et_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:inputType="number"
        android:hint="Ingrese un numero mayor a 6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_generar_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generar lista"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_marginLeft="60sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="salir"
            android:layout_marginLeft="20sp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:id="@+id/btn_salir"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplos de 3 desde 6"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"/>

    <Spinner
        android:id="@+id/sp_numeros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40sp"/>


</LinearLayout>