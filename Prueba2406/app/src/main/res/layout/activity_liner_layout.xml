<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LinerLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ejemplo 2"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="20sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese sus datos"
                android:layout_margin="20sp"
                android:textSize="25sp"
                android:gravity="center"/>

            <EditText
                android:layout_margin="10sp"
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su nombre"/>
            <EditText
                android:layout_margin="10sp"
                android:id="@+id/et_apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su Apellido"/>

            <EditText
                android:id="@+id/et_edad"
                android:layout_margin="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su edad"
                android:inputType="number"/>

            <LinearLayout
                android:layout_margin="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Ingrese su genero:"/>

                <Spinner
                    android:id="@+id/sp_genero"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione sus gustos"
                android:textSize="25sp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:columnCount="2"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cb_futbol"
                    android:text="Futbol"
                    android:textSize="25sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="50sp"
                    />

                <CheckBox
                    android:id="@+id/cb_video_juegos"
                    android:text="Video Juegos"
                    android:textSize="25sp"
                    />

                <CheckBox
                    android:id="@+id/cb_comida"
                    android:text="Comida"
                    android:textSize="25sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="50sp"
                    />

                <CheckBox
                    android:id="@+id/cb_dormir"
                    android:text="Dormir"
                    android:textSize="25sp"
                    />

                <CheckBox
                    android:id="@+id/cb_otros"
                    android:text="otros"
                    android:layout_columnSpan="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="50sp"
                    android:textSize="25sp"
                    />

            </GridLayout>

            <Button
                android:id="@+id/btn_ingresa_datos"
                android:layout_width="wrap_content"
                android:layout_margin="20sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Ingresar Datos"/>

            <TextView
                android:id="@+id/tv_Resultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"/>

        </LinearLayout>

    </ScrollView>





</LinearLayout>
